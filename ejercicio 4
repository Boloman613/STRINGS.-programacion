#include <iostream>
#include <string>
using namespace std;

string invertirCadena(string palabra) {
    string invertida = "";
    for (int i = palabra.length() - 1; i >= 0; i--) {
        invertida += palabra[i];
    }
    return invertida;
}
bool esCapicua(string palabra) {
    string invertida = invertirCadena(palabra);
    return palabra == invertida;
}

int main() {
    string palabra;

    cout << "Introduce una palabra: ";
    cin >> palabra;

    string invertida = invertirCadena(palabra);

    cout << "Palabra invertida: " << invertida << endl;

    if (esCapicua(palabra))
        cout << "La palabra ES capicua." << endl;
    else
        cout << "La palabra NO es capicua." << endl;

    return 0;
}
